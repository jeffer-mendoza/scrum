{% extends 'base.html.twig' %}

{% block title %}GDE PRODUCT BACKLOG{% endblock %}
{% block stylesheet %}
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css" rel="stylesheet"
          integrity="sha384-T8Gy5hrqNKT+hzMclPo118YTQO6cYprQmhrYwIiQ/3axmI1hQomh7Ud2hPOy8SP1"
          crossorigin="anonymous">
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
{% endblock %}

{% block content %}
    <div style="font-family: Arial, 'Times New Roman'">
        <table class="table table-responsive">
            <tr>
                <td colspan="1">
                    <img src="http://www.univalle.edu.co/english/simbolos/logos/imagenes/univalle-rojopuro-159x226.gif"
                         class="img-responsive" width="80">
                </td>
                <td class="text-center" colspan="5">
                    <strong style="font-size: 26px">Sistema Para la Gestión de Documentos Electrónicos</strong><br/>
                    <strong style="font-size: 22px">Área de Registro Académico</strong><br/>
                    <strong style="font-size: 20px">Sprint: {{ sprint.name }}</strong><br/>
                    <strong style="font-size: 20px">Iteración No. {{ sprint.number }}</strong><br/>
                </td>
            </tr>
        </table>
        <table class="table table-bordered table-striped table-responsive">
            <tr>
                <th style="width: 20%">Nombre</th>
                <td>{{ sprint.name }}</td>
                <th>Iteración No.</th>
                <td>{{ sprint.number }}</td>
            </tr>
            <tr>
                <th>Duración</th>
                <td>{{ sprint.duration }} semanas</td>
                <th>Puntos</th>
                <td>{{ sprint.points }}</td>
            </tr>
            <tr>
                <th>Fecha de Inicio</th>
                <td>{% if sprint.startDate %}{{ sprint.startDate|date('d \\d\\e M \\d\\e Y') }}{% endif %}</td>
                <th>Fecha de Finalización</th>
                <td>{% if sprint.dueDate %}{{ sprint.dueDate|date('d \\d\\e M \\d\\e Y') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Objetivo del sprint</th>
                <td colspan="3">{{ sprint.objective }}</td>
            </tr>
        </table>
        <table id="detail" class="table table-bordered table-striped table-responsive">
            <tr>
                <th colspan="6" class="text-center">Sprint Backlog</th>
            </tr>
            <tr>
                <th class="text-center">Id</th>
                <th class="text-center">Título</th>
                <th class="text-center">Prioridad</th>
                <th class="text-center">Estado</th>
                <th class="text-center">Puntos</th>
                {#<th class="text-center">Esfuerzo</th>#}
            </tr>
            {% for story in stories %}

            <tr>
                <td style="width: 5%">GD{{ story.id }}</td>
                <td style="width: 20%">{{ story.title }}</td>
                <td style="width: 5%" class="text-center">{{ story.strpriority }}</td>
                <td style="width: 5%" class="text-center">{{ story.strstatus }}</td>
                <td style="width: 5%" class="text-center">{{ story.points }}</td>
                {#<td style="width: 5%" class="text-center">{{ story.effort }} hrs</td>#}
            </tr>

            {% endfor %}
        </table>
    </div>
    <style>
        #detail td {
            width: 16.6%;
        }
    </style>

{% endblock %}
