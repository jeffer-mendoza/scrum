{% extends 'UserBundle:Security:layout.html.twig' %}
{% block title %}Iniciar sesi√≥n{% endblock %}

{% block panel_body %}
    <div class="row">
        <form class="col s12" role="form" action="{{ path("fos_user_security_check") }}" method="post"
              autocomplete="off">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <div class="row">
                <div class="input-field col s12 l12">
                    <i class="material-icons prefix">account_circle</i>
                    <input id="icon_prefix" type="text" class="validate" name="_username" value="{{ last_username }}">
                    <label for="icon_prefix">Username</label>
                </div>
                <div class="input-field col s12 l12">
                    <i class="material-icons prefix">https</i>
                    <input id="icon_https" class="validate" name="_password" type="password" required="required">
                    <label for="icon_https">Password</label>
                </div>
                <div class="col l12 m12 s12">
                    <input class="btn col l12" type="submit" id="_submit" name="_submit" value="Sign in"/>
                </div>
            </div>
        </form>
    </div>
    <script>
        $(document).ready(function () {
            Materialize.updateTextFields();
        });
    </script>
{% endblock %}

