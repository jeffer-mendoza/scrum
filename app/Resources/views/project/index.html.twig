{% extends 'base.html.twig' %}

{% block body %}
    <h1>Project list</h1>

     <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Startdate</th>
                <th>Duedate</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for project in projects %}
            <tr>
                <td><a class="btn btn-default" href="{{ path('project_show', { 'id': project.id }) }}">{{ project.id }}</a></td>
                <td>{{ project.name }}</td>
                <td>{{ project.description }}</td>
                <td>{% if project.startDate %}{{ project.startDate|date('d-M-Y H:i:s') }}{% endif %}</td>
                <td>{% if project.dueDate %}{{ project.dueDate|date('d-M-Y H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a class="btn btn-default" href="{{ path('project_show', { 'id': project.id }) }}"><i  class="fa fa-eye"></i></a>
                        </li>
                        <li>
                            <a class="btn btn-default" href="{{ path('project_edit', { 'id': project.id }) }}"><i  class="fa fa-pencil"></i></a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a class="btn btn-default" href="{{ path('project_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
