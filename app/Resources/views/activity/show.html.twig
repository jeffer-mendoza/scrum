{% extends 'base.html.twig' %}

{% block body %}
    <h1>Activity</h1>

     <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ activity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ activity.name }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a class="btn btn-default" href="{{ path('activity_index') }}"><i class="fa fa-arrow-left" aria-hidden="true"></i> </a>
        </li>
        <li>
            <a class="btn btn-default" href="{{ path('activity_edit', { 'id': activity.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
