{% extends 'layout.html.twig' %}

{% block panel_title %}Backlogs{% endblock %}
{% block panel_actions %}
    <a class="boton boton-default" href="{{ path('story_new', {'id': project.id }) }}">Story new</a>
    <a class="boton boton-default" href="{{ path('report_story_list_pdf')}}"><i class="fa fa-book"></i> </a>
    <a class="boton boton-default" href="{{ path('report_product_backlog_pdf')}}"><i class="fa fa-file-pdf-o"></i> </a>
    <a class="boton boton-default" href="{{ path('report_product_backlog_image')}}"><i class="fa fa-file-image-o"></i> </a>
{% endblock %}

    {% block th %}
        <th>id</th>
        <th>Title</th>
        <th>Priority</th>
        <th>Points</th>
        <th>Status</th>
        <th>Effort</th>
    {% endblock %}

    {% block td %}
        {% for story in stories %}
            <tr class="" title="{{story.fullDescription}}"   >
                <td>{{ story.id }}</td>
                <td>{{ story.title }}</td>
                <td>{{ story.strpriority }}</td>
                <td>{{ story.points }}</td>
                <td>{{ story.strstatus }}</td>
                <td>{{ story.effort }}</td>
                <td>
                    <a class="waves-effect waves-light btn" href="{{ path('story_show', { 'id': story.id }) }}"><i
                                class="fa fa-eye"></i></a>
                    <a class="waves-effect waves-light btn" href="{{ path('story_edit', { 'id': story.id }) }}"><i
                                class="fa fa-pencil"></i></a>
                </td>
            </tr>
        {% endfor %}
    {% endblock %}