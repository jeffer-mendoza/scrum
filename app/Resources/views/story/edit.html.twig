{% extends 'layout.html.twig' %}

{% block panel_title %}{{ story.title }} Edit{% endblock %}
{% block panel_actions %}
    <a class="waves-effect waves-light btn" href="{{ path('story_index') }}"><i class="fa fa-arrow-left"
                                                                                aria-hidden="true"></i>
    </a>
    {{ form_start(delete_form) }}
    <input class="waves-effect waves-light btn" type="submit" value="Delete">
    {{ form_end(delete_form) }}
{% endblock %}
{% block panel_body %}
    {{ form_start(edit_form) }}
    {{ form_widget(edit_form) }}
    <input class="waves-effect waves-light btn" type="submit" value="Edit"/>
    {{ form_end(edit_form) }}
{% endblock %}