{% extends 'base.html.twig' %}

{% block body %}
    <h1>Story</h1>

     <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ story.id }}</td>
            </tr>
            <tr>
                <th>Want</th>
                <td>{{ story.want }}</td>
            </tr>
            <tr>
                <th>Sothat</th>
                <td>{{ story.soThat }}</td>
            </tr>
            <tr>
                <th>Priority</th>
                <td>{{ story.priority }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ story.status }}</td>
            </tr>
            <tr>
                <th>Effort</th>
                <td>{{ story.effort }}</td>
            </tr>
            <tr>
                <th>Startdate</th>
                <td>{% if story.startDate %}{{ story.startDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Duedate</th>
                <td>{% if story.dueDate %}{{ story.dueDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a class="btn btn-default" href="{{ path('story_index') }}">Back to the list</a>
        </li>
        <li>
            <a class="btn btn-default" href="{{ path('story_edit', { 'id': story.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
