{% extends 'base.html.twig' %}

{% block body %}
    <h1>Activity list</h1>

     <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for activity in activities %}
            <tr>
                <td><a class="btn btn-default" href="{{ path('activity_show', { 'id': activity.id }) }}">{{ activity.id }}</a></td>
                <td>{{ activity.name }}</td>
                <td>
                    <ul>
                        <li>
                            <a class="btn btn-default" href="{{ path('activity_show', { 'id': activity.id }) }}"><i  class="fa fa-eye"></i></a>
                        </li>
                        <li>
                            <a class="btn btn-default" href="{{ path('activity_edit', { 'id': activity.id }) }}"><i  class="fa fa-pencil"></i></a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a class="btn btn-default" href="{{ path('activity_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
