{% extends 'base.html.twig' %}

{% block body %}
    <h1>Rol</h1>

     <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ rol.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ rol.name }}</td>
