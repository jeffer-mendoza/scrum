{% extends '::base.html.twig' %}

{% block content -%}
    <div class="container">

        <div class="row">
            <div class="col s1 m2 l3">

            </div>
            <div class="col s10 m8 l6">

                <div id="panel" class="row card-panel">
                    <div class="col s12 m12 l12" style="text-align: center">
                        <h4>Scrum Management</h4>
                        Área de Registro Académico
                        <br>
                        <br>

                    </div>
                    <div class="col s12 m12 l12">
                        {% for flashMessage in app.session.flashbag.get('warning') %}
                            <div class="card alert alert-warning alert-dismissable">
                                {{ flashMessage }}
                            </div>
                        {% endfor %}
                        {% for flashMessage in app.session.flashbag.get('error') %}
                            <div style="background-color: transparent" class="alert-danger" data-dismiss="alert">
                              {{ flashMessage }}
                            </div>
                        {% endfor %}
                    </div>
                    <div class="col s12 m12 l12">
                        {% block panel_body %}

                        {% endblock %}
                    </div>

                </div>
