{% extends 'layout.html.twig' %}

{% block panel_title %}Test Creation{% endblock %}
{% block panel_actions %}
    <a class="boton boton-default" href="{{ path('test_edit', {'id': test.id}) }}"><i class="fa fa-edit"></i></a>
{% endblock %}
{% block panel_body %}
    <table class="tabla bordered">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ test.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ test.name }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ test.description }}</td>
        </tr>
        <tr>
            <th>Data</th>
            <td>{{ test.data }}</td>
        </tr>
        <tr>
            <th>Prerequisite</th>
            <td>{{ test.prerequisite|raw }}</td>
        </tr>
        <tr>
            <th>Steps</th>
            <td>{{ test.steps|raw }}</td>
        </tr>
        <tr>
            <th>Expected</th>
            <td>{{ test.expected|raw }}</td>
        </tr>
        <tr>
            <th>Obtained</th>
            <td>{{ test.obtained|raw }}</td>
        </tr>
        <tr>
            <th>Status</th>
            <td>{{ test.status }}</td>
        </tr>
        <tr>
            <th>Type</th>
            <td>{{ test.type }}</td>
        </tr>
        <tr>
            <th>Automated</th>
            <td>{% if test.automated %}Yes{% else %}No{% endif %}</td>
        </tr>
        </tbody>
    </table>
    <div class="text-right">
        {{ form_start(delete_form) }}
        <input class="boton boton-default" type="submit" value="Delete">
        {{ form_end(delete_form) }}
    </div>

{% endblock %}
